<%- include('../partials/header') %>

<div class="container py-md-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary"><i class="fas fa-rocket me-2"></i> Jelajahi Produk Unggulan Kami</h1>
        <p class="lead text-muted">Temukan solusi VPS dan Pterodactyl Panel terbaik untuk kebutuhan Anda.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col product-card">
                    <div class="card h-100 shadow-sm">
                         <% if (product.category === 'vps') { %>
                            <div class="card-header bg-primary-light text-primary fw-bold">
                                <i class="fas fa-server me-2"></i> VPS Server
                            </div>
                        <% } else if (product.category === 'pterodactyl_panel') { %>
                             <div class="card-header bg-accent-light text-accent-dark fw-bold"> <!-- Buat kelas bg-accent-light jika perlu -->
                                <i class="fas fa-gamepad me-2"></i> Pterodactyl Panel
                            </div>
                        <% } %>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold"><%= product.name %></h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="fas fa-tag me-1"></i> <%= product.category.replace('_', ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                            </p>
                            <p class="card-text flex-grow-1 fs-09"><%= product.description.substring(0, 120) %><% if (product.description.length > 120) { %>...<% } %></p>
                            <p class="card-text price mt-auto">Rp <%= product.price.toLocaleString('id-ID') %></p>
                            <a href="/product/<%= product._id %>" class="btn btn-primary w-100"><i class="fas fa-eye me-2"></i>Lihat Detail</a>
                        </div>
                         <div class="card-footer text-muted small text-center">
                            Stok: <span class="fw-bold <%= product.stock > 0 ? 'text-success' : 'text-danger' %>"><%= product.stock > 0 ? product.stock : 'Habis' %></span>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center p-5">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4 class="alert-heading">Oops! Belum Ada Produk</h4>
                    <p>Saat ini belum ada produk yang tersedia. Silakan cek kembali nanti.</p>
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>