<%- include('../partials/header') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-chart-line me-2"></i>Dashboard Admin</h1>
</div>

<div class="row">
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="admin-dashboard-card bg-card-primary shadow">
            <div class="card-body">
                <div class="card-title text-uppercase">Total Pengguna</div>
                <div class="card-text"><%= totalUsers %></div>
                <i class="fas fa-users card-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="admin-dashboard-card bg-card-success shadow">
            <div class="card-body">
                <div class="card-title text-uppercase">Total Produk</div>
                <div class="card-text"><%= totalProducts %></div>
                <i class="fas fa-boxes card-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="admin-dashboard-card bg-card-info shadow">
            <div class="card-body">
                <div class="card-title text-uppercase">Total Pesanan</div>
                <div class="card-text"><%= totalOrders %></div>
                <i class="fas fa-receipt card-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3 mb-4">
        <div class="admin-dashboard-card bg-card-warning shadow">
            <div class="card-body">
                <div class="card-title text-uppercase">Deposit Sukses</div>
                <div class="card-text">Rp <%= totalSuccessfulDepositAmount.toLocaleString('id-ID') %></div>
                <i class="fas fa-money-check-alt card-icon"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary-light">
                <h5 class="mb-0 text-primary"><i class="fas fa-bolt me-2"></i>Akses Cepat</h5>
            </div>
            <div class="list-group list-group-flush">
                <a href="/admin/products" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-box-open me-2 text-primary"></i>Kelola Produk</span>
                    <i class="fas fa-chevron-right text-muted"></i>
                </a>
                <a href="/admin/orders" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-receipt me-2 text-primary"></i>Kelola Pesanan</span>
                    <i class="fas fa-chevron-right text-muted"></i>
                </a>
                <a href="/admin/deposits" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-wallet me-2 text-primary"></i>Kelola Deposit</span>
                    <i class="fas fa-chevron-right text-muted"></i>
                </a>
                <a href="/admin/users" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-users me-2 text-primary"></i>Kelola Pengguna</span>
                    <i class="fas fa-chevron-right text-muted"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>