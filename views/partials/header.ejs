<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> | <%= storeName %></title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('navbar') %>
    <div class="alert-container">
        <% if (locals.success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i><%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (locals.error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (locals.currentError && currentError.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-times-circle me-2"></i><%= currentError %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>

    <div class="main-content-wrapper"> <!-- Wrapper for main content -->
        <% if (pageTitle && !pageTitle.toLowerCase().includes('admin') && !pageTitle.toLowerCase().includes('login') && !pageTitle.toLowerCase().includes('register') && !pageTitle.toLowerCase().includes('berhasil')) { %>
            <div class="page-title-container text-center">
                <div class="container">
                    <h1><%= pageTitle %></h1>
                </div>
            </div>
        <% } %>
        <div class="container-fluid">
            <div class="row">
                <% if (pageTitle && pageTitle.toLowerCase().includes('admin')) { %>
                    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block admin-sidebar collapse">
                        <div class="position-sticky pt-3">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link <%= pageTitle.toLowerCase().includes('dashboard') ? 'active' : '' %>" href="/admin/dashboard">
                                        <i class="fas fa-tachometer-alt"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link <%= pageTitle.toLowerCase().includes('produk') ? 'active' : '' %>" href="/admin/products">
                                        <i class="fas fa-box-open"></i> Produk
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link <%= pageTitle.toLowerCase().includes('pesanan') ? 'active' : '' %>" href="/admin/orders">
                                        <i class="fas fa-receipt"></i> Pesanan
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link <%= pageTitle.toLowerCase().includes('deposit') && !pageTitle.toLowerCase().includes('status') ? 'active' : '' %>" href="/admin/deposits">
                                        <i class="fas fa-wallet"></i> Deposit
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link <%= pageTitle.toLowerCase().includes('pengguna') ? 'active' : '' %>" href="/admin/users">
                                        <i class="fas fa-users"></i> Pengguna
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-content">
                <% } else { %>
                    <main class="col-12">
                        <div class="container py-4">
                <% } %>